<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label "Contact Type" %><br />
    <%= f.collection_select(:contact_type_id, ContactType.all, :id, :contact_type, options = { :prompt => true } ) %>
  </div>

  <div class="field">
    <%= f.label "Date of Birth" %><br />
    <%= f.date_select :dob, :include_blank => true, :start_year => 1900 %>
  </div>

  <div class="field">
    <%= f.label "Device Serial Number" %><br />
    <%= f.text_field :device_serial %>
  </div>
  <br />
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
